{
  "name": "vue-ssr-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for developing Server Side Render Vue.js Application",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "test": "rimraf coverage && cross-env NODE_ENV=test jest",
    "pm2": "cross-env NODE_ENV=production pm2 start pm2.conf.json --watch",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config ./build/webpack.client.conf.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config ./build/webpack.server.conf.js --progress --hide-modules"
  },
  "keywords": [
    "vue",
    "ssr"
  ],
  "author": "justemit",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.5.2",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.17",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^1.1.11",
    "jest": "^23.5.0",
    "jest-vue": "^0.8.2",
    "koa-webpack-middleware": "^1.0.7",
    "memory-fs": "^0.4.1",
    "mime": "^2.3.1",
    "mini-css-extract-plugin": "^0.4.1",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "rimraf": "^2.6.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "sw-precache-webpack-plugin": "^0.11.5",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.1",
    "vue-loader": "^15.4.0",
    "vue-template-compiler": "^2.5.17",
    "vue-test-utils": "^1.0.0-beta.11",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
